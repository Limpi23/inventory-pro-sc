{
  "appId": "com.inventariopro.app",
  "productName": "Inventario Pro - SC",
  "copyright": "Copyright Â© 2025",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron.cjs"
  ],
  "publish": {
    "provider": "github",
    "private": false,
    "releaseType": "release",
    "token": "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",
    "owner": "Limpi23",
    "repo": "inventory-pro-sc",
    "publishAutoUpdate": true
  },
  "mac": {
    "category": "public.app-category.business",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "src/assets/app-icon.icns"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "src/assets/app-icon.ico",
    "publisherName": "Inventario Pro",
    "verifyUpdateCodeSignature": false
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Office",
    "icon": "src/assets/app-icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Inventario Pro",
    "uninstallDisplayName": "Inventario Pro - SC",
    "artifactName": "Inventario-Pro-Setup-${version}.${ext}",
    "deleteAppDataOnUninstall": false,
    "displayLanguageSelector": true,
    "license": "LICENSE.txt",
    "runAfterFinish": true,
    "perMachine": false,
    "differentialPackage": true,
    "installerLanguages": [
      "es-ES",
      "en-US"
    ],
    "language": "3082",
    "include": "installer.nsh"
  },
  "afterPack": "./scripts/afterPack.cjs"
}