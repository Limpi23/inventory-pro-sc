    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron.cjs"
  ],
  "publish": {
    "provider": "github",
    "private": false,
    "releaseType": "release",
    "token": "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",
    "owner": "Limpi23",
    "repo": "inventory-pro-sc",
