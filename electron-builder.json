{
  "appId": "com.suitcore.inventory",
  "productName": "Inventario Pro",
  "copyright": "Copyright Â© 2025",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "electron.cjs"
  ],
  "publish": {
    "provider": "github",
    "private": false,
    "releaseType": "release",
    "owner": "Limpi23",
    "repo": "inventory-pro-sc",
    "publishAutoUpdate": true
  },
  "mac": {
    "category": "public.app-category.business",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "src/assets/app-icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "src/assets/app-icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Office",
    "icon": "src/assets/app-icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Inventario Pro",
    "installerIcon": "src/assets/app-icon.ico",
    "uninstallerIcon": "src/assets/app-icon.ico"
  },
  "afterPack": "./scripts/afterPack.cjs"
}