    "artifactName": "${productName}-Setup-${version}.${ext}",
    "publisherName": "SuitCore",
    "requestedExecutionLevel": "requireAdministrator",
    "msi": {
      "language": 3082,
      "codepage": 65001,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inventario Pro",
      "wixToolsetVersion": "3.14",
      "wixToolsetArchitecture": "x64",
      "wixToolsetOptions": {
        "codepage": 65001,
        "language": 3082,
        "cultures": ["es-ES"]
      }
    }
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Office",
    "icon": "src/assets/app-icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Inventario Pro",
    "uninstallDisplayName": "Inventario Pro",
    "artifactName": "Inventario-Pro-Setup-${version}.${ext}",
    "deleteAppDataOnUninstall": false,
    "displayLanguageSelector": true,
    "license": "LICENSE.txt",
    "runAfterFinish": true,
    "perMachine": false,
    "differentialPackage": true,
    "installerLanguages": [
      "es-ES",
      "en-US"
